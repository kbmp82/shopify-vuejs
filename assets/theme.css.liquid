/* Generic Theme Styles */:root {
  --black: #1d1d1d;
  --main-font: Helvetica, Arial, sans-serif;
}

body {
  font-family: 'Roboto', sans-serif;
}

.container {
  max-width: 1360px;
  margin-inline: auto;
  padding: 0 15px;
  width: 100%;
}

button {
  border: none;
  border-radius: 4px;
  background-color: {{ settings.button_bg_clr }}
  ;
  color: {{ settings.button_fnt_clr }}
  ;
}

button:hover {
  background-color: {{ settings.button_bg_clr_h }}
  ;
  color: {{ settings.button_fnt_clr_h }}
  ;
}

.radius {
  border-radius: 4px;
}

img.zoom {
  transition: all 0.4s ease-in;
}

img.zoom:hover {
  transform: scale(1.1);
}

.fade-enter-active,
.fade-leave-active {
  transition: opacity 0.5s ease;
}

.fade-enter-from,
.fade-enter-to {
  opacity: 0;
}

@media(min-width: 1361px) {
  .container {
    padding: 0;
  }

}
@media(prefers-color-scheme: dark){:root {
  --black: #ececec;
}
}