<div class="product-option-row">
  <div
    class="product-option-label"
    @click="option.visible = !option.visible"
    :class="{ 'label-active': option.visible}"
  >
    ${ option.name } - ${ selected[i] }
  </div>
  <div class="product-options" v-if="option.visible">
    <template v-for="(value, index) in option.values">
      <div
        class="product-option-item"
        @click="
          selected[i] = value;
          option.visible = false;
          form.selections[i] = value;
        "
      >
        ${ value }
      </div>
    </template>
  </div>
</div>
